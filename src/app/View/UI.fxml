<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootFXML" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="200" minWidth="200" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.Controller.MainController">
<top>
    <MenuBar fx:id="menuFXML" BorderPane.alignment="CENTER">
        <menus>
            <Menu text="File">
                <items>
                    <MenuItem onAction="#onOpen" text="Open" />
                    <MenuItem onAction="#onSave" text="Save" />
                    <MenuItem onAction="#onSaveAs" text="Save As" />
                    <MenuItem onAction="#onClose" text="Close" />
                </items>
            </Menu>
            <Menu text="Edit">
                <items>
                    <MenuItem onAction="#onDelete" text="Delete" />
                </items>
            </Menu>
            <Menu text="Help">
                <items>
                    <MenuItem onAction="#onAbout" text="About" />
                </items>
            </Menu>
        </menus>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
    </MenuBar>
</top>

<center>
    <ScrollPane fx:id="centerArea" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="512.0" prefWidth="797.0" />
        </content>
    </ScrollPane>
</center>


</BorderPane>
